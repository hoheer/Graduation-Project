<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Signtext"
        android:layout_width="407dp"
        android:layout_height="48dp"
        android:background="@drawable/edge"
        android:gravity="right"
        android:text="회원가입"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Sign_Nicname_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="332dp"
        android:text="닉네임:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Signtext"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Sign_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="..."
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/Sign_Nicname_Textview"
        app:layout_constraintTop_toTopOf="@+id/Sign_Nicname_Textview" />


    <TextView
        android:id="@+id/Sign_Email_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:text="이메일:"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sign_Nicname_Textview"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Kindofdog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="어떤 품종 인가요?"

        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Sign_Email_Textview"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <TextView
        android:id="@+id/Sign_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="...."
        app:layout_constraintStart_toEndOf="@+id/Sign_Email_Textview"
        app:layout_constraintTop_toTopOf="@+id/Sign_Email_Textview" />

    <Spinner
        android:id="@+id/Dog_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@+id/Kindofdog"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="18dp" />

    <Button
       android:id="@+id/logout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="88dp"

       android:text="로그아웃"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintHorizontal_bias="0.232"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent" />

   <Button
       android:id="@+id/Button_Sign_Out"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="88dp"
       android:text="회원탈퇴"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintHorizontal_bias="0.696"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Button_Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/Dog_birthday"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:text="강아지의 생일"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/Dog_check"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="14dp" />

    <EditText
        android:id="@+id/Dog_Birthday_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="생년월일을 입력하십시오"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Dog_birthday"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>