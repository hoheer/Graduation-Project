<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pro">


    <ImageView
        android:id="@+id/Dog_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_round"
        android:layout_below="@+id/Pet_name"
        />

    <TextView
        android:id="@+id/Sign_Nicname_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Dog_check"
        android:text="이름:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sign_Nicname_Textview"
        android:textSize="20sp">

    </EditText>




    <TextView
        android:id="@+id/Sign_Sex_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수컷"
        android:textSize="20dp"
        android:id="@+id/boy"
        android:layout_below="@+id/Sign_Sex_Textview"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="암컷"
        android:id="@+id/girl"
        android:layout_below="@+id/Sign_Sex_Textview"
        android:layout_toRightOf="@+id/boy"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="중성"
        android:id="@+id/nothing"
        android:layout_below="@+id/Sign_Sex_Textview"
        android:layout_toRightOf="@+id/girl"
        />



    <TextView
        android:id="@+id/Dog_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="강아지의 생일"
        android:textSize="30dp"
        android:layout_below="@+id/nothing"

        />


    <EditText
        android:id="@+id/Dog_Birthday_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Dog_birthday"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="생년월일을 입력하십시오"/>

    <TextView
        android:id="@+id/Kindofdog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="품종"
        android:textSize="25dp"
        android:layout_below="@+id/Dog_Birthday_Text"
        android:layout_centerVertical="true"
        />

    <Spinner
        android:id="@+id/Dog_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/Kindofdog"
        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_below="@+id/Dog_image"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ListView
            android:id="@+id/db_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </ScrollView>

    <Button
        android:id="@+id/Save_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="저장하기"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/test34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Save_Button"
        android:layout_alignParentBottom="true"
        android:text="test3"/>






</RelativeLayout>