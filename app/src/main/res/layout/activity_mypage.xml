<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mypage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="167dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <ImageView
            android:id="@+id/Profile_Image1"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        이미지 -카카오톡
        <TextView
            android:id="@+id/Sign_Nicname_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Signtext"
            android:text="닉네임:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Sign_Nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="..."
            android:textSize="20sp"
            android:layout_below="@+id/Sign_Nicname_Textview">

        </TextView>
        <TextView
            android:id="@+id/Sign_Email_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="이메일:"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Sign_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="...." />

        텍스트뷰 -카카오톡 이름
        이메일 -카카오톡 주소

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="412dp"
        android:layout_height="281dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp">

        <Button
            android:id="@+id/My_Pet_Page_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 나의 반려 동물 "
            android:textSize="30dp" />

        <Button
            android:id="@+id/Pet_Choice_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물 추천"
            android:textSize="30dp" />
        나의 반려동물 -버튼
        반려동물 추천 -버튼


    </LinearLayout>

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="237dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp">

        <Button
            android:id="@+id/Button_Sign_Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sign_Email"
            android:layout_toRightOf="@+id/logout"
            android:text="회원탈퇴" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/Sign_Email"
            android:text="로그아웃" />

        회원탈퇴 -버튼
        로그아웃 -버튼
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>